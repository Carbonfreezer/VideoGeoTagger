<Window x:Class="VideoGeoTagger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoGeoTagger"
        mc:Ignorable="d"
        Title="Video Geo Tagger" Height="1200" Width="1600" ResizeMode="NoResize">
    <Canvas>
        <TabControl x:Name="tabControl" Height="1150" Width="420" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TabItem Header="Data Loading">
               <Canvas>

               </Canvas>
            </TabItem>
            <TabItem Header="Splitting Points">
                <Canvas>

                </Canvas>
            </TabItem>
            <TabItem Header="Segment Synchronization">
                <Canvas>

                </Canvas>
            </TabItem>
            <TabItem Header="Data Saving">
                <Canvas>

                </Canvas>
            </TabItem>
        </TabControl>
        <GroupBox x:Name="VideoControl" Height="580" Header="Video Control" Width="1150"  HorizontalAlignment="Right" VerticalAlignment="Top" Canvas.Right="0">
            <Canvas>
               <Image x:Name="VideoImage" Height="530" Width="1140" HorizontalAlignment="Left" VerticalAlignment="Top" />
               <Slider x:Name="VideoSlider" Height="20" Width="1140" Canvas.Left="0" Canvas.Bottom="0" Maximum="6" ValueChanged="OnVideoSliderChanged"/>
            </Canvas>
        </GroupBox>

        <GroupBox x:Name="GpxControl" Height="580" Header="Gpx Control" Width="1150"  HorizontalAlignment="Right" VerticalAlignment="Top" Canvas.Right="0" Canvas.Bottom="0">
                <Canvas>
                    <Image x:Name="GpxImage" Height="550" Width="1000" HorizontalAlignment="Left" VerticalAlignment="Top" MouseDown="OnGpxMouseDown" MouseUp="OnGpxMouseUp" MouseMove="OnGpxMouseMove" />
                    <Button x:Name="ZoomIn" FontSize="36" Canvas.Right="50" Canvas.Top="100" Click="OnZoomIn" Width="50" Height="50">+</Button>
                <Button x:Name="ZoomOut" FontSize="36" Canvas.Right="50" Canvas.Bottom="100" Click="OnZoomOut" Width="50" Height="50">-</Button>
            </Canvas>
        </GroupBox>

    </Canvas>
</Window>
