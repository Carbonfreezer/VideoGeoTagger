<Window x:Class="VideoGeoTagger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoGeoTagger"
        mc:Ignorable="d"
        Title="Video Geo Tagger" Height="1200" Width="1600" ResizeMode="NoResize">
    <Canvas>
        <TabControl x:Name="tabControl" Height="1150" Width="420" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TabItem Header="Data Loading">
                <Canvas>
                    <Button Canvas.Left="122" Canvas.Top="69"  FontSize="18" Click="OnLoadVideo" HorizontalAlignment="Left" VerticalAlignment="Center" Width="140" >Load Video</Button>
                    <Button Canvas.Left="122" Canvas.Top="131"  FontSize="18" Click="OnLoadGpx" HorizontalAlignment="Left" VerticalAlignment="Center" Width="140">Load Gpx</Button>
                    <Label FontSize="18" Canvas.Left="33" Canvas.Top="399">Map Data provided by OpenStreetMap</Label>
                </Canvas>
            </TabItem>
            <TabItem Header="Splitting Points">
                <Canvas>
                    <ListBox x:Name="SplittingList" Width="400" Height="800" FontSize="18" HorizontalAlignment="Left" Canvas.Left="7" VerticalAlignment="Center" SelectionMode="Single">

                    </ListBox>
                    <Button x:Name="ButtonCreateSplitting" FontSize="18" Canvas.Left="121" Canvas.Top="854" HorizontalAlignment="Center" VerticalAlignment="Top">Create Splitting Point</Button>
                    <Button x:Name="ButtonDeleteSplitting" FontSize="18" Canvas.Left="121" Canvas.Top="919" HorizontalAlignment="Center" VerticalAlignment="Top">Delete Splitting Point</Button>
                </Canvas>
            </TabItem>
            <TabItem Header="Segment Synchronization">
                <Canvas>

                </Canvas>
            </TabItem>
            <TabItem Header="Data Saving">
                <Canvas>

                </Canvas>
            </TabItem>
        </TabControl>
        <GroupBox x:Name="VideoControl" Height="580" Header="Video Control" Width="1150"  HorizontalAlignment="Right" VerticalAlignment="Top" Canvas.Right="0">
            <Canvas>
                <Canvas x:Name="VideoImage" Height="530" Width="1140" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <Slider x:Name="VideoSlider" Height="20" Width="1140" Canvas.Left="0" Canvas.Bottom="0" Maximum="100"/>
            </Canvas>
        </GroupBox>

        <GroupBox x:Name="GpxControl" Height="580" Header="Gpx Control" Width="1150"  HorizontalAlignment="Right" VerticalAlignment="Top" Canvas.Right="0" Canvas.Bottom="0">
            <Canvas>
                <Image x:Name="GpxImage" Height="550" Width="1000" HorizontalAlignment="Left" VerticalAlignment="Top"  Stretch="None"/>
                <Slider x:Name="GpxZoomSlider" Height="500" Width="20" Canvas.Left="1043" Canvas.Bottom="0" Maximum="200" Canvas.Top="29" Orientation="Vertical"/>
            </Canvas>
        </GroupBox>

    </Canvas>
</Window>
